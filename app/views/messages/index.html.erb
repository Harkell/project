<div class="grey333bg positionrelative">
	<div class="row content2 padding3t1b">
		<div class="large-4 columns">
			<%= image_tag('messagestitle.png', class: "") %>
		</div>
		<div class="large-7 columns text-center greytabsposition">
			<ul class="inline-list greytabs">
				<li>Edit Account</li>
				<li>My Profile</li>
			</ul>
		</div>
	</div>
</div>

<div class="row content1 padding2t padding2b">
	<div class="row">
		<div class="large-12 columns">
			<div class="row">
				<div class="large-12 columns content1">
			    <div class="panel">
			      <div class="row">
			        <div class="large-12 columns text-left">
			          <h5 class="weight500">Messages</h5>
			        </div>
			      </div>
			    </div>
			    <div class="row supportrow1">
			    	<div class="large-3 columns messagescolumnbg supportrow1 br1blue">
			    		<div class="sidehoverbutton messagetabs"><h6 class="content margin0b font08 sidehovertext">Inbox</h6></div>
			    		<div class="sidehoverbutton messagetabs"><h6 class="content margin0b font08 sidehovertext">Sent Messages</h6></div>
			    	</div>
			    	<div class="large-9 columns whitebg supportrow1">
			    		<%= @no_messages %>
			    		<% @paginated_messages.each do |message| %>
			    			<%= link_to message_path(message) do %>
			    				<div class="row messagesbg padding1v1h">
				    				<div class="large-3 columns">
					    				<h6 class="font08 lineheight0 margin0b weight500"><%= message.sender.forename %> <%= message.sender.surname %></h6>
					    			</div>
					    			<div class="large-7 columns">
					    				<h6 class="font08 lineheight0 margin0b weight500"><%= message.body %></h6>
					    			</div>
					    			<div class="large-2 columns">
					    				<h6 class="font08 lineheight0 margin0b"><%= message.created_at.strftime("%H:%M %d/%m/%Y") %></h6>
					    			</div>
					    		</div>
				    		<% end %>
				    	<% end %>
				    	<%= paginate @paginated_messages %>
			    	</div>
			    </div>
			  </div>
			</div>
	  </div>
	</div>
	</div>

</div>

	<script type="text/javascript">
	  (function() {

	      $(function() {

	        $(function() {
	          $('.supportrow1').matchHeight();
	        });

	        $(function() {
	          $('.supportrow2').matchHeight();
	        });
	        
	      });

	  })();
	</script>