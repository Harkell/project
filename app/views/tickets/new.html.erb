<div class="grey333bg positionrelative">
	<div class="row content2 padding5t1b">
		<div class="large-4 columns">
			<%= image_tag('supporttitle.png', class: "hqtitle") %>
		</div>
		<div class="large-7 columns text-center greytabsposition">
			<ul class="inline-list greytabs">
				<li>Guides</li>
				<li>Knowledge Base</li>
				<li>Portal</li>
			</ul>
		</div>
	</div>
</div>

<div class="row content1 padding2t padding2b">
	<div class="row">
		<div class="large-8 columns">
			<div class="row">
				<div class="large-12 columns content1">
			    <div class="panel">
			      <div class="row">
			        <div class="large-12 columns text-left">
			          <h5 class="weight500">Your Support Tickets</h5>
			        </div>
			      </div>
			    </div>
			    <div class="row whitebg padding125t content3 ticketrow1">
						<%= form_for(@new_ticket) do |f| %>
							<%= f.hidden_field :user_id, :value => current_user.id %>
							<%= f.hidden_field :closed, :value => false %>
							<%= f.label "Subject" %>
							<%= f.text_field :subject %>
							<%= f.label "Query" %>
							<%= f.text_area :content %>
							<%= f.submit "Send0" %>
						<% end %>
			    </div>
			  </div>
			</div>
	  </div>
		<div class="large-4 columns content1">
	    <div class="panel">
	      <div class="row">
	        <div class="large-12 columns text-left">
	          <h5 class="weight500">Contact Details</h5>
	        </div>
	      </div>
	    </div>
	    <div class="row whitebg content2 ticketrow1">
	    </div>
	  </div>
	</div>
</div>

	<script type="text/javascript">
	  (function() {

	      $(function() {

	        $(function() {
	          $('.ticketrow1').matchHeight();
	        });
	        
	      });

	  })();
	</script>
