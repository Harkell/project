
<div class="logincontainer">
	<div class="loginrow whitebg padding1v">
		<div class="large-12 columns text-center">
			<%= image_tag("logogradient.png") %>
		</div>
	</div>
	<div class="loginrow login1bg padding2v">
		<div class="12-large columns content2 login">
			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="row padding1b">
		  	<div class="large-2 columns whitebg loginrows">

		  	</div>
		  	<div class="large-10 columns loginrows">
		  	<%= f.email_field :email, autofocus: true %>
			  </div>
		  </div>
		  <div class="row padding1b">
		  	<div class="large-2 columns whitebg loginrows">

		  	</div>
		  	<div class="large-10 columns loginrows">
		    <%= f.password_field :password, autocomplete: "off" %>
			  </div>
		  </div>
		  <div class="row">
		  	<div class="large-6 columns">
				  <% if devise_mapping.rememberable? -%>
				    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  			  <% end -%>
			  </div>
		  </div>
		</div>
	</div>
	<div class="loginrow login2bg">
		<div class="large-12 columns text-center">
		  <div><%= f.submit "Login" %></div>
		</div>
	</div>
</div>
<% end %>



<%= render "devise/shared/links" %>

  <script type="text/javascript">
    (function() {

        $(function() {

          $(function() {
            $('.loginrows').matchHeight();
          });

          
        });

    })();
  </script>
