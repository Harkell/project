<div class="grey333bg positionrelative">
	<div class="row content2 padding5t1b">
		<div class="large-1 columns text-center">
			<%= image_tag('useravatar.png', class: "useravatar") %>
		</div>
		<div class="large-5 columns content">
			<h5 class="white weight500 font09 margin0b"><%= @user.branch.name %></h5>
			<h2 class="white weight500 font2 lineheight0"><span class="bt1blue"><%= @user.forename + " " + @user.surname %></span></h2>
		</div>
		<%= link_to new_user_message_path(@user) do %>
		<div class="large-2 columns text-center greytabsposition">
			<ul class="inline-list greytabs">
				<li>Send Message</li>
			</ul>
		</div>
		<% end %>
	</div>
</div>


<div class="row content1 padding2t padding2b">
	<div class="row">
		<div class="large-12 columns">
			<div class="row">
				<div class="large-8 columns content1">
			    <div class="panel">
			      <div class="row">
			        <div class="large-12 columns text-left">
			          <h5 class="weight500">Messages</h5>
			        </div>
			      </div>
			    </div>
			    <% if current_user.id == @user.id %>
			    	<%= form_for(@new_update) do |f| %>
						<%= f.hidden_field :user_id, :value => current_user.id %>
						<%= f.text_area :content %>
						<%= f.submit "Send0" %>
					<% end %>
				<% end %>
				      <% @updates.each do |update| %>
					      	<a href="<%= user_path(update.user) %>">
						      <div class="margin125b">
						        <div class="row updatesborder">
						          <div class="large-12 columns text-left">
						            <div class="panel br3t">
						              <h6 class="weight500 font08"><%= update.user.forename + " " + update.user.surname %> <span class="font07 weight300"><%= update.user.branch.name %></span></h6>
						            </div>
						            <div class="panel whitepanel">
						              <p class="font08 weight500 padding02t06b"><%= update.content %></p>
						            </div>
						            <div class="whitebg content bt1grey datepanel br3b">
						              <div class="row valign-middle">
						                <div class="large-6 columns text-left">
						                  <h6 class="weight300 font07 margin0b"><%= time_ago_in_words(update.created_at) + " ago" %></h6>
						                </div>
						                <div class="large-6 columns text-right">
						                  <%= image_tag('heartit.png', class: "margin0b") %>
						                </div>
						              </div>
						            </div>
						          </div>
						        </div>
						      </div>
		    				</a>
						<% end %>
			  </div>
				<div class="large-4 columns content1">
			    <div class="panel">
			      <div class="row">
			        <div class="large-12 columns text-left">
			          <h5 class="weight500">Statistics</h5>
			        </div>
			      </div>
			    </div>
			    <div class="row whitebg bb1grey">
			    	<div class="large-6 columns text-center br1grey">
			    		<div class="margin1v"><h4 class="lineheight0 margin0b gradient">2,320</h4><h6 class="lineheight0 margin0b font09 gradient">Karma</h6></div>
			    	</div>
			    	<div class="large-6 columns text-center">
			    		<div class="margin1v"><h4 class="lineheight0 margin0b gradient">20</h4><h6 class="lineheight0 margin0b font09 gradient">Updates</h6></div>
			    	</div>
			    </div>
			    <div class="row whitebg">
			    	<div class="large-6 columns text-center br1grey">
			    		<div class="margin1v"><h4 class="lineheight0 margin0b gradient">6</h4><h6 class="lineheight0 margin0b font09 gradient">Forum Threads</h6></div>
			    	</div>
			    	<div class="large-6 columns text-center">
			    		<div class="margin1v"><h4 class="lineheight0 margin0b gradient">12</h4><h6 class="lineheight0 margin0b font09 gradient">Forum Replies</h6></div>
			    	</div>
			    </div>
			  </div>
			</div>
	  </div>
	</div>
	</div>

</div>

	<script type="text/javascript">
	  (function() {

	      $(function() {

	        $(function() {
	          $('.supportrow1').matchHeight();
	        });

	        $(function() {
	          $('.supportrow2').matchHeight();
	        });
	        
	      });

	  })();
	</script>